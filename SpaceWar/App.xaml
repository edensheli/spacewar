<Application x:Class="SpaceWar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpaceWar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MainTheme.xaml"/>
                <ResourceDictionary Source="Theme/ShopTheme.xaml"/>
                <ResourceDictionary Source="Theme/GameTheme.xaml"/>
                <ResourceDictionary Source="Theme/HomeTheme.xaml"/>
                <ResourceDictionary Source="Theme/SettingsTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="UserControl" >
                <Setter Property="FontFamily" Value="fonts/#Dosis"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
